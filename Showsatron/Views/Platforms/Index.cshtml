@model IEnumerable<Showsatron.Models.Platform>

@{
    ViewData["Title"] = "Platform";
}

<h1>Platforms</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlatformId" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlatformId" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlatformId" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
